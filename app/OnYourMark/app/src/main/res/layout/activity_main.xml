<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context="com.example.mikezurawski.onyourmark.views.MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        app:titleTextColor="@color/colorWhite" />

    <!-- Month Switcher -->
    <LinearLayout
        android:id="@+id/month_switcher"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="50dp">

        <Button
            android:id="@+id/back_month_btn"
            android:textSize="30sp"
            android:layout_marginLeft="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="&lt;"/>

        <TextView
            android:id="@+id/month_switcher_text"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="December"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/forward_month_btn"
            android:textSize="30sp"
            android:layout_marginRight="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="&gt;"/>
    </LinearLayout>

    <!-- Data Display -->
    <ScrollView
        android:id="@+id/has_information"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Monthly Summary Box -->
            <LinearLayout
                android:id="@+id/monthly_summary_box"
                android:orientation="vertical"
                android:background="@drawable/layout_bg"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Summary"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/monthly_summary_chart"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="150dp"
                        android:layout_weight="0"
                        android:layout_height="100dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="27dp"
                        android:background="@color/colorPrimaryDark"/>

                    <!-- Money Details Section -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingRight="30dp">

                        <!-- Spent Information -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp">

                            <TextView
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/colorRed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SPENT"/>

                            <TextView
                                android:id="@+id/monthly_summary_spent_txt"
                                android:textColor="@color/colorWhite"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$200.00"/>
                        </RelativeLayout>

                        <!-- Remaining Information -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="5dp">

                            <TextView
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/colorBlue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REMAINING"/>

                            <TextView
                                android:id="@+id/monthly_summary_remaining_txt"
                                android:textColor="@color/colorWhite"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"/>

                        </RelativeLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/md_black_1000"/>

                        <!-- Total Monthly Information -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL"/>

                            <TextView
                                android:id="@+id/monthly_summary_total_txt"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"/>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Monthly Breakdown Box -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/layout_bg"
                android:layout_margin="7dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Breakdown"/>

                <!-- Monthly Breakdown Items List -->
                <LinearLayout
                    android:id="@+id/monthly_breakdown_items"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/monthly_breakdown_chart"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>

                <!-- No Data to Display -->
                <LinearLayout
                    android:id="@+id/no_information"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uh oh! Looks like you don't have any data"/>
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click on the button below to add your first budget"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Item"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
